# ==========================================
# POST-DEPLOYMENT SETUP CONFIGURATION
# ==========================================

# Whether to create test markets after deployment
CREATE_TEST_MARKETS=true

# Test user setup (only for development with mock tokens)
SETUP_TEST_USERS=false

# Comma-separated list of test user addresses
# These addresses will receive test tokens if using mock token
