# Amount of test tokens to mint for each test user
# Default: 10,000 tokens with 18 decimals
TEST_TOKEN_AMOUNT=10000000000000000000000

# Whether to set up authorized matchers
SET_AUTHORIZED_MATCHERS=false

# Comma-separated list of authorized matcher addresses
# These addresses will be able to execute order matching operations
AUTHORIZED_MATCHER_ADDRESSES=0x90F79bf6EB2c4f870365E785982E1f101E93b906

